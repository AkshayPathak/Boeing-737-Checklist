<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boeing737checklist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.boeing737checklist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.boeing737checklist.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.boeing737checklist.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.boeing737checklist.MainActivity" />
        </activity>
        <activity
            android:name="com.boeing737checklist.OtherChecklistsActivity"
            android:label="@string/title_activity_other_checklists"
            android:parentActivityName="com.boeing737checklist.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.boeing737checklist.MainActivity" />
        </activity>
    </application>

</manifest>
